extend /partials/layout

block append config
  - page.title = "Lowy Institute â€“ Charts and Interactives"

block page
  style
    :sass
      body
        font-family: "Sans", Montserrat

      body
        background: #002a45 !important
        color: #fff
        display: flex
        align-items: center

      a:hover
        color: #539fd5

      p
        margin-bottom: 1rem

      h1
        font: inherit
        text-transform: uppercase
        font-weight: 600
        letter-spacing: 0.02em
        margin-bottom: 0.6rem

        a
          text-decoration: none

      ul
        list-style: none
        padding: 0
        margin: 0 -8px
        overflow: hidden
        display: flex
        font-size: 20px

      li
        margin-bottom: 0
        width: 33.33%
        float: left
        box-sizing: border-box
        padding: 0 0.5rem
        text-align: center
        font-family: Cond
        display: flex
        flex-grow: 1
        align-items: stretch

        a
          display: block
          padding: 1rem 0.5rem
          background: #fff
          color: #002a45
          text-decoration: none
          line-height: 1.1
          transition: all 300ms
          display: flex
          flex-grow: 1
          align-items: center
          justify-content: center
          width: 100%

          &:hover
            background: #539fd5
            color: #fff

      .text
        margin: 0 auto 1rem
        padding: 1rem 0 0
        border-top: 1px solid rgba(#fff, 0.2)

      .block
        max-width: 428px
        padding: 1rem
        margin: 40px auto

      @media (max-width: 480px)
        body
          font-size: 16px
        .text
          margin: 0 auto 4px
          padding-bottom: 1rem
        ul
          flex-direction: column
        li
          float: none
          width: 100%
          margin: 0 0 1rem
          a
            padding: 1rem 40px

  .block
    .text
      :marked
        # [Lowy Institute][1]
        Welcome to the home of charts and interactives at the Lowy Institute.
        Unfortunately, the page you are looking for cannot be found. Continue 
        on to our [site][1] or explore some of our recent charts and 
        interactives.

        [1]: https://www.lowyinstitute.org/

    .links
      :marked
        - [Indonesia's Incredible Elections][2]
        - [Top 20 Countries by Gross Domestic Product][3]
        - [Top 20 Countries by Military Expenditure][4]

        [2]: /features/indonesia-votes-2019
